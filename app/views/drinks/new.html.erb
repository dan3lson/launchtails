<div class="row">
  <%- if @drink.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @drink.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Drink</h1>

    <%= form_for @drink do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= label_tag :category %>
      <%= select_tag :category, options_from_collection_for_select(Category.all, :id, :name) %>

      <%= f.radio_button :alcohol_level, 'Medium' %>
      <%= f.label :alcohol_level_medium, 'Medium' %>

      <%= f.check_box :featured %>
      <%= f.label :featured %>

      <%= f.submit "Add Drink" %>
    <%- end -%>
  </div>
</div>
